<Window x:Class="SZGYA13C_Setahajok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZGYA13C_Setahajok"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Label Content="Hajó:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="158,17,0,0"/>
            <ComboBox x:Name="hajoNev" Grid.Row="0" Grid.Column="0" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="205,19,0,0"/>

            <Label Content="Napok Száma:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="115,38,0,0" />
            <TextBox x:Name="napok" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="205,46,0,0"/>

            <Button x:Name="napiKoltseg" Content="Számoljunk!" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Margin="0,23,0,0" Click="napiKoltseg_Click" />
            <Label x:Name="napiKoltsegLB" Content="XXXX" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,43,0,0"/>

            <Label Content="Utasok száma:" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="102,26,0,0"/>
            <TextBox x:Name="utasok" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="200,30,0,0"/>
            <Button x:Name="kereses" Content="Keresés" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Margin="0,52,0,0" />

            <Label x:Name="ajanlottHajo" Content="Ajánlott hajó:" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>



        </Grid>
    </Grid>
</Window>
